<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="@dimen/activity_dialog_width"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_icon_bg"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_icon_height"
            android:src="@mipmap/audibi_activity_bg"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奥迪优惠兑换机"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="@dimen/sp18_text"
            android:layout_marginTop="@dimen/margin3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="纵享豪礼"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="@dimen/sp18_text"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最高3000元购车抵用券等你领"
            android:layout_gravity="center_horizontal"
            android:textColor="#999"
            android:textSize="@dimen/m_text"
            android:layout_marginTop="@dimen/margin2"/>

        <TextView
            android:id="@+id/duihuan_txt"
            android:layout_width="@dimen/margin20"
            android:layout_height="@dimen/margin5"
            android:background="@drawable/btn_main_bg"
            android:layout_marginTop="@dimen/margin2"
            android:layout_gravity="center_horizontal"
            android:text="立即兑换"
            android:textColor="#fff"
            android:textSize="@dimen/sp16_text"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin3"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/cancel_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/activity_close_icon"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin4"/>


</LinearLayout>