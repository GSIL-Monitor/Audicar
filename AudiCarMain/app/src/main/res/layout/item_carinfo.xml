<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="@dimen/item_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin1.5"
        android:paddingRight="@dimen/margin1.5"
        android:paddingTop="@dimen/margin1.5"
        android:background="@mipmap/car_list_item_bg"
        android:paddingBottom="@dimen/margin2"
        >
        <com.beautyyan.beautyyanapp.view.RecyclerImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:scaleType="fitXY"
            android:src="@mipmap/valuable_car_pic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/margin0.25"
            android:paddingRight="@dimen/margin0.25"
            android:paddingTop="@dimen/margin">
            <TextView
                android:id="@+id/tv_carxi"
                android:textSize="@dimen/normal_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="奥迪Q3    2015款   35 TFSI舒适型"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/normal_text_color"
                />
            <LinearLayout
                android:id="@+id/tag_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin0.5"
               >
                <TextView
                    android:id="@+id/tag1_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="准新车"
                    android:textSize="@dimen/sp9_text"
                    android:background="@drawable/search_bg"
                    android:paddingLeft="@dimen/margin0.5"
                    android:paddingRight="@dimen/margin0.5"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:visibility="visible"
                    />
                <TextView
                    android:id="@+id/tag2_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0过户"
                    android:textSize="@dimen/sp9_text"
                    android:background="@drawable/search_bg"
                    android:paddingLeft="@dimen/margin0.5"
                    android:paddingRight="@dimen/margin0.5"
                    android:layout_marginLeft="@dimen/margin0.5"
                    android:textColor="#999999"
                    android:visibility="invisible"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tag3_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="两年0利率"
                    android:textSize="@dimen/sp9_text"
                    android:background="@drawable/search_bg"
                    android:paddingLeft="@dimen/margin0.5"
                    android:paddingRight="@dimen/margin0.5"
                    android:layout_marginLeft="@dimen/margin0.5"
                    android:maxLines="1"
                    android:textColor="#999999"
                    android:visibility="invisible"
                    android:ellipsize="end"
                    android:gravity="center"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_years"
                android:textSize="@dimen/m_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2015年/3.2万公里/北京"
                android:layout_marginTop="@dimen/margin0.5"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#666666"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin0.5">
                <TextView
                    android:textSize="@dimen/normal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/red_used"
                    android:textStyle="bold"
                    />
            <TextView
                android:id="@+id/tv_price"
            android:textSize="@dimen/h_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22.20万"
                android:textColor="@color/red_used"
                android:textStyle="bold"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（二手车价）"
                    android:textSize="@dimen/sp10_text"
                    android:visibility="gone"/>
            </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>