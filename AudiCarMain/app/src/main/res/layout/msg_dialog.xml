<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"

    >

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin2"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin10"
        android:background="@drawable/input_edittext_bg"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/msg_dialog_tip"
            android:textColor="#333333"
            android:lineSpacingExtra="@dimen/margin0.5"
            android:textSize="@dimen/h_text"
            android:layout_marginTop="@dimen/margin1.5"/>
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin3"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/star_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/star_dialog_unselected"
                />
            <ImageView
                android:id="@+id/star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/star_dialog_unselected"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/margin1.5"/>
            <ImageView
                android:id="@+id/star_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/star_dialog_unselected"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/margin1.5"/>
            <ImageView
                android:id="@+id/star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/star_dialog_unselected"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/margin1.5"/>
            <ImageView
                android:id="@+id/star_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/star_dialog_unselected"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/margin1.5"/>
        </RadioGroup>

        <TextView
            android:id="@+id/submit_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin6"
            android:layout_margin="@dimen/margin3"
            android:background="@drawable/button_bg_selector"
            android:textColor="#fff"
            android:text="提交"
            android:gravity="center"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/close_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/msg_dialog_close"
        android:layout_alignParentRight="true"/>

</RelativeLayout>